import zipfile
import os

# Name of your zip file
zip_file = os.path.join("templates", "product_images.zip")

# Correct folder for Flask static images
extract_folder = os.path.join(os.getcwd(), "static", "images")

# Create folder if it doesn't exist
os.makedirs(extract_folder, exist_ok=True)

# Extract the zip file into static/images
try:
    with zipfile.ZipFile(zip_file, 'r') as zip_ref:
        zip_ref.extractall(extract_folder)
    print(f"‚úÖ Images successfully extracted to: {extract_folder}")
    print("üéØ Now you can access them using {{ url_for('static', filename='images/your_image.jpg') }} in your HTML.")
except FileNotFoundError:
    print(f"‚ùå Error: {zip_file} not found in {os.getcwd()}")
except zipfile.BadZipFile:
    print(f"‚ùå Error: {zip_file} is not a valid zip file")
